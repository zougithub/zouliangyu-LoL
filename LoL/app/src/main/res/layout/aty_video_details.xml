<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_marginLeft">

        <ImageView
            android:id="@+id/video_item_details_iv"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_width"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/video_item_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/video_item_details_iv"
            android:layout_toRightOf="@id/video_item_details_iv" />

        <TextView
            android:id="@+id/video_item_details_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/video_item_details_name"
            android:layout_below="@id/video_item_details_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/community_in" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_layout_height"
        android:background="@color/colorCommunityView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_marginLeft"
        android:text="@string/list" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/video_details_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
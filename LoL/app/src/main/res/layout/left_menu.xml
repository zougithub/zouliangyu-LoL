<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/left_menu_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slidingMenu_login_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:src="@mipmap/left_menu_head" />

        <Button
            android:id="@+id/slidingMenu_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_marginRight"
            android:layout_marginTop="@dimen/left_menu_marginTop"
            android:text="点击头像登录" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/LinearLayout_marginRight"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_weight="1"

            android:drawableTop="@mipmap/left_menu_money"
            android:gravity="center_horizontal"
            android:text="我的钱包"
            android:textColor="@color/colorBackground" />

        <TextView
            android:id="@+id/my_collect_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_weight="1"
            android:drawableTop="@mipmap/left_menu_collect"
            android:gravity="center_horizontal"
            android:text="我的收藏"
            android:textColor="@color/colorBackground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_weight="1"
            android:drawableTop="@mipmap/left_menu_comment"
            android:gravity="center_horizontal"
            android:text="我的评论"
            android:textColor="@color/colorBackground" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/LinearLayout_marginRight"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_weight="1"
            android:drawableTop="@mipmap/left_menu_community"
            android:gravity="center_horizontal"
            android:text="我的社区"
            android:textColor="@color/colorBackground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_weight="1"
            android:drawableTop="@mipmap/left_menu_video"
            android:gravity="center_horizontal"
            android:text="离线视频"
            android:textColor="@color/colorBackground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_weight="1"
            android:drawableTop="@mipmap/left_menu_task"
            android:gravity="center_horizontal"
            android:text="我的任务"
            android:textColor="@color/colorBackground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/LinearLayout_marginRight"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_weight="1"
            android:drawableTop="@mipmap/left_menu_guess"
            android:gravity="center_horizontal"
            android:text="我的竞猜"
            android:textColor="@color/colorBackground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/LinearLayout_marginRight"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_marginLeft"
            android:layout_marginTop="@dimen/layout_margin"
            android:drawableLeft="@mipmap/left_menu_setting"
            android:text="设置"
            android:textColor="@color/colorBackground" />

    </LinearLayout>
</LinearLayout>
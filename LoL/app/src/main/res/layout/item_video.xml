<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_video_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_video_iv"
            android:layout_width="@dimen/LinearLayout_marginRight"
            android:layout_height="@dimen/LinearLayout_marginRight"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/item_video_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_video_iv"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
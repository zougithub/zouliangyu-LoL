<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_marginLeft">

        <ImageView
            android:id="@+id/item_video_details_bottom_iv"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/title_height"
            android:scaleType="fitXY" />

        <!--<ImageView-->
            <!--android:id="@+id/item_video_details_top_iv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/left_menu_marginTop"-->
            <!--android:layout_marginTop="@dimen/layout_marginRight"-->
            <!--android:src="@mipmap/video_play" />-->

        <TextView
            android:id="@+id/item_video_details_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_alignTop="@id/item_video_details_bottom_iv"
            android:layout_toRightOf="@id/item_video_details_bottom_iv" />

        <TextView
            android:id="@+id/item_video_details_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_video_details_title_tv"
            android:layout_below="@id/item_video_details_title_tv" />

        <TextView
            android:id="@+id/item_video_details_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_video_details_desc_tv" />
    </RelativeLayout>
</LinearLayout>
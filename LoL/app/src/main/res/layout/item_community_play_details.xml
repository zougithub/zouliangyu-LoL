<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/layout_marginLeft"
    android:layout_marginRight="@dimen/layout_marginLeft"
    android:layout_marginTop="@dimen/layout_marginLeft"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_marginLeft">

        <TextView
            android:id="@+id/item_community_play_details_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publisher" />

        <TextView
            android:id="@+id/item_community_play_details_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_community_play_details_publish"
            android:text="@string/colon" />


        <TextView
            android:id="@+id/item_community_play_details_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_toRightOf="@id/item_community_play_details_one" />

        <TextView
            android:id="@+id/item_community_play_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_marginLeft"
            android:layout_toLeftOf="@id/item_community_play_details_time"
            android:src="@mipmap/publish_time_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_layout_height"
        android:background="@color/colorCommunityView" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_marginLeft">

        <ImageView
            android:id="@+id/item_community_play_details_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/talent_a" />

        <TextView
            android:id="@+id/item_community_play_details_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_community_play_details_head"
            android:layout_toRightOf="@id/item_community_play_details_head" />

        <TextView
            android:id="@+id/item_community_play_details_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_community_play_details_type"
            android:layout_below="@id/item_community_play_details_type"
            android:layout_marginTop="@dimen/left_menu_marginRight" />

        <!--<TextView-->
        <!--android:id="@+id/item_community_play_details_pattern"-->

        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toRightOf="@id/item_community_play_details_colon"-->
        <!--android:text="召唤师峡谷" />-->

        <ImageView
            android:id="@+id/item_community_play_details_area_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_community_play_details_pattern"
            android:layout_below="@id/item_community_play_details_pattern"
            android:layout_marginTop="@dimen/left_menu_marginRight"
            android:src="@mipmap/sn_icon" />

        <TextView
            android:id="@+id/item_community_play_details_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_community_play_details_area_icon"
            android:layout_toRightOf="@id/item_community_play_details_area_icon" />

        <TextView
            android:id="@+id/item_community_play_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_community_play_details_area"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_toRightOf="@id/item_community_play_details_area" />

        <ImageView
            android:id="@+id/item_community_play_details_combat_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_community_play_details_name"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_toRightOf="@id/item_community_play_details_name"
            android:src="@mipmap/zdl_icon" />

        <TextView
            android:id="@+id/item_community_play_details_zdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_community_play_details_combat_icon"
            android:layout_toRightOf="@id/item_community_play_details_combat_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_layout_height"
        android:background="@color/colorCommunityView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_marginLeft"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_marginLeft"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/talent_b" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/talent_c" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/talent_d" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/talent_e" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/talent_f" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/talent_g" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_layout_height"
        android:background="@color/colorCommunityView" />


</LinearLayout>